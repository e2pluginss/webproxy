        </plugins>


    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <version>2.5.3</version>
                <configuration>
                    <onlyAnalyze>com.mvas.*</onlyAnalyze>
                </configuration>
            </plugin>
        </plugins>
    </reporting>



</project>